<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.instachat.GroupChatActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingTop="16dp"
            android:text="@string/title_update_my_pic"
            android:textSize="16sp"
            android:textStyle="bold"
            app:font="@{`Lato-Regular`}"
            />

        <TextView
            android:id="@+id/menu_choose_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_photo_library_black_36dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:text="@string/menu_choose_photo"
            android:textColor="@color/jonPink"
            android:textSize="16sp"
            android:textStyle="bold"
            app:font="@{`Lato-Regular`}"
            />

        <TextView
            android:id="@+id/menu_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_photo_camera_black_36dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:text="@string/menu_take_photo"
            android:textColor="@color/jonGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            />

    </LinearLayout>

</layout>