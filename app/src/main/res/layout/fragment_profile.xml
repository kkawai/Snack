    <com.instachat.android.view.CustomFontTextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kkawai"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:font="Lato-Heavy.ttf"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="@dimen/profile_pic_width"
        android:layout_height="@dimen/profile_pic_height"
        android:scaleType="centerCrop"
        android:transitionName="image"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/status"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:baselineAlignBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/presence_green"
            />

        <com.instachat.android.view.CustomFontTextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0"
            android:text="online"
            android:textColor="#a8a8a8"
            android:textSize="15sp"
            app:font="Lato-Regular.ttf"
            />
    </LinearLayout>

